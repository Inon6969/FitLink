<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardBackgroundColor="@color/fitlinkBackground"
    app:cardCornerRadius="24dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"
            android:src="@drawable/ic_delete"
            app:tint="#FF5252" />

        <TextView
            android:id="@+id/txtDeleteUserTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Delete User"
            android:textColor="@color/fitlinkPrimary"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/txtDeleteUserMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Do you also want to delete all the groups created by this user?"
            android:textAlignment="center"
            android:textColor="@color/fitlinkTextSecondary"
            android:textSize="16sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDeleteUserAndGroups"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#FF5252"
            android:fontFamily="@font/poppins_medium"
            android:text="Delete User &amp; Groups"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:cornerRadius="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDeleteUserOnly"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Delete User Only"
            android:textAllCaps="false"
            android:textColor="@color/fitlinkPrimary"
            app:cornerRadius="16dp"
            app:strokeColor="@color/fitlinkPrimary"
            app:strokeWidth="2dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDeleteCancel"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@color/fitlinkTextSecondary" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>