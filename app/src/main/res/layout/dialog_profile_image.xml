<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:id="@+id/txt_profileImageDialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Profile Picture"
            android:textSize="30sp"
            android:textColor="?attr/colorOnSurface"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginBottom="16dp"
            android:gravity="center"/>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/btn_profileImageDialog_camera"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="Take Photo"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSecondary"
                android:backgroundTint="@color/fitlinkPrimary"
                android:fontFamily="@font/poppins_bold"
                android:layout_margin="4dp"/>

            <Button
                android:id="@+id/btn_profileImageDialog_gallery"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="Choose from Gallery"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSecondary"
                android:backgroundTint="@color/fitlinkPrimary"
                android:fontFamily="@font/poppins_bold"
                android:layout_margin="4dp"/>

            <Button
                android:id="@+id/btn_profileImageDialog_delete"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="Remove Photo"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSecondary"
                android:backgroundTint="@color/fitlinkPrimary"
                android:fontFamily="@font/poppins_bold"
                android:layout_margin="4dp"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btn_profileImageDialog_cancel"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSecondary"
                android:backgroundTint="@color/fitlinkPrimary"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginTop="12dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>