<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:background="@color/fitlinkBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_item_group_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerInside"
            android:padding="12dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/fitlinkPrimary"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.MaterialComponents.SmallComponent"
            android:src="@drawable/ic_running"
            android:background="#126200EE" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/tv_item_group_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Morning Runners"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/fitlinkPrimary"
                android:layout_marginBottom="4dp"
                tools:text="Morning Runners" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="2dp">

                <ImageView
                    android:id="@+id/img_item_group_sport_mini"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_sport"
                    app:tint="@color/fitlinkTextSecondary"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/tv_item_group_sport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Running"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/fitlinkTextSecondary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="2dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_location"
                    app:tint="@color/fitlinkTextSecondary"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/tv_item_group_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rishon LeZion"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/fitlinkTextSecondary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="2dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_user"
                    app:tint="@color/fitlinkTextSecondary"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/tv_item_group_members"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 Members"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/fitlinkTextSecondary" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_item_group_creator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="By Yinon"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/fitlinkTextSecondary"
                android:alpha="0.7"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_group_level"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Beginner"
                android:textSize="10sp"
                android:fontFamily="@font/poppins_medium"
                app:chipBackgroundColor="@color/fitlinkPrimary"
                android:textColor="@color/fitlinkBackground"
                app:chipStrokeWidth="0dp" />

            <Button
                android:id="@+id/btn_item_group_join"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JOIN"
                android:minWidth="0dp"
                android:paddingHorizontal="8dp"
                android:textSize="14sp"
                android:textColor="@color/fitlinkPrimary"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>